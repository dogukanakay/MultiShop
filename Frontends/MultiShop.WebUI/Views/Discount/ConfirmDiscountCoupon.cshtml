
<div class="col-lg-4">
    <form class="mb-30" asp-controller="Discount" asp-action="ConfirmDiscountCoupon" method="post">
        <div class="input-group">
            <input type="text" class="form-control border-0 p-4" name="code" value="@ViewBag.DiscountCode" placeholder="Kuponu Giriniz">
            <div class="input-group-append">
                <button  class="btn btn-primary">Kuponu Uygula</button>
                
            </div>
        </div>
    </form>
    <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Sepet Özeti</span></h5>
    <div class="bg-light p-30 mb-5">
        <div class="border-bottom pb-2">
            <div class="d-flex justify-content-between mb-3">
                <h6>Toplam Sepet Tutarı</h6>
                <h6>@ViewBag.TotalPrice TL</h6>
            </div>
            <div class="d-flex justify-content-between">
                <h6 class="font-weight-medium">KDV (%10)</h6>
                <h6 class="font-weight-medium">@ViewBag.Tax</h6>
            </div>
            <div class="d-flex justify-content-between mt-2">
                <h5>İndirim Oranı</h5>
                <h5>%@ViewBag.DiscountRate</h5>
            </div>
           
        </div>
        <div class="pt-2">
            <div class="d-flex justify-content-between mt-2">
                <h5>Toplam Tutar</h5>
                <h5>@ViewBag.TotalPriceWithTax TL</h5>
            </div>
            <div class="d-flex justify-content-between mt-2">
                <h5>İndirimli Yeni Toplam Tutar</h5>
                <h5>@ViewBag.TotalPriceWithDiscount</h5>
            </div>
            <button class="btn btn-block btn-primary font-weight-bold my-3 py-3">Ödemeye Devam Et</button>
        </div>
    </div>
</div>