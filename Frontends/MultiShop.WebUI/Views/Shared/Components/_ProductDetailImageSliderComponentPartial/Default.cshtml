@model List<ResultProductImageDto>
@{
    int count = 0;
}
<div class="col-lg-5 mb-30">
    <div id="product-carousel" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner bg-light">
            @if (Model.Count >0)
            {
                @foreach (var item in Model)
                {
                    count++;
                    if (count == 1)
                    {
                        <div class="carousel-item active">
                            <img class="w-100 h-100" src="@item.Image" alt="Image" style="height:450px !important;">
                        </div>
                    }
                    else
                    {
                        <div class="carousel-item">
                            <img class="w-100 h-100" src="@item.Image" alt="Image" style="height:450px !important;">
                        </div>

                    }
                }
            }
            else
            {
                <div class="carousel-item active">
                    <img class="w-100 h-100" src="~/images/CategoryImages/soon.png" alt="Image" style="height:450px !important;">
                </div>
            }
           




        </div>
        <a class="carousel-control-prev" href="#product-carousel" data-slide="prev">
            <i class="fa fa-2x fa-angle-left text-dark"></i>
        </a>
        <a class="carousel-control-next" href="#product-carousel" data-slide="next">
            <i class="fa fa-2x fa-angle-right text-dark"></i>
        </a>
    </div>
</div>