@model BasketTotalDto
<div class="bg-light p-30 mb-5">
    <div class="border-bottom">
        <h6 class="mb-3">Sipariş Listesi</h6>
        @foreach (var item in Model.BasketItems)
        {
            decimal productTotalPrice = item.Price * item.Quantity;
            <div class="d-flex justify-content-between">
                <p>@item.ProductName</p>
                <p>@item.Quantity x @item.Price =><bold>@productTotalPrice</bold></p>
            </div>
        }

    </div>
    <div class="border-bottom pt-3 pb-2">
        <div class="d-flex justify-content-between mb-3">
            <h6>Alışveriş Tutarı</h6>

            <h6>@ViewBag.TotalPrice Tl</h6>

        </div>
        <div class="d-flex justify-content-between">
            <h6 class="font-weight-medium">Kargo Ücreti</h6>
            <h6 class="font-weight-medium">10 TL</h6>
        </div>
    </div>
    <div class="pt-2">
        <div class="d-flex justify-content-between mt-2">
            <h5>Genel Toplam</h5>
            <h5>$160</h5>
        </div>
    </div>
</div>