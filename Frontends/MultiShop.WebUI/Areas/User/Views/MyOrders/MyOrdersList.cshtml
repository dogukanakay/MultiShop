@model List<ResultOrderingByUserIdDto>
@{
    ViewData["Title"] = "MyOrdersList";
    Layout = "~/Areas/User/Views/UserLayout/Index.cshtml";
    int count = 0;
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Siparişlerim</h4>
                        <p class="card-description">
                            Siparişlerinizin Listesi
                        </p>
                        <div class="table-responsive pt-3">
                            <table class="table table-striped table-dark table-bordered">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Sipariş Tutarı</th>
                                        <th>Sipariş Tarihi</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;

                                        <tr>
                                            <td>@count</td>
                                            <td>@item.TotalPrice</td>
                                            <td>@(((DateTime)item.OrderDate).ToString("dd/MMM/yyyy"))</td>
                                            <td><a href="#" class="btn btn-warning"> Sipariş Detayları</a></td>
                                        </tr>

                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <!-- content-wrapper ends -->
    <!-- partial:../../partials/_footer.html -->
    <footer class="footer">
        <div class="card">
            <div class="card-body">
                <div class="d-sm-flex justify-content-center justify-content-sm-between">
                    <span class="text-muted d-block text-center text-sm-left d-sm-inline-block">Copyright © MultiShop @DateTime.UtcNow.Year</span>
                    <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center"> Free <a href="https://www.bootstrapdash.com/" target="_blank">MultiShop Kullanıcı Paneli</a> Tüm Hakları Saklıdır.</span>
                </div>
            </div>
        </div>
    </footer>
    <!-- partial -->
</div>

