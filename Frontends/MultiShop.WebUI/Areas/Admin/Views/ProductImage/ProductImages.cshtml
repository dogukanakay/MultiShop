@model List<ResultProductImageDto>
@{
    ViewData["Title"] = "ProductImages";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<section class="content container-fluid">
    <div class="row">

        <div class="col-md-12">
            <div class="chart-box">
                <div class="bs-example" data-example-id="bordered-table">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Ürün Görseli</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                                
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <th scope="row">@count</th>
                                    <td><img src="@item.Image" style="height:150px;"/></td>
                                    <td><a href="/Admin/ProductImage/DeleteProductImage/@item.ProductImageId" class="btn btn-danger">Sil</a></td>
                                    <td><a href="/Admin/ProductImage/UpdateProductImage/@item.ProductImageId" class="btn btn-success">Güncelle</a></td>
                                    

                                </tr>
                            }

                        </tbody>
                    </table>
                    <a href="/Admin/ProductImage/CreateProductImage/@ViewBag.x" class="btn btn-primary">Yeni Görsel Girişi</a>
                </div>
            </div>
        </div>



    </div>
</section>
